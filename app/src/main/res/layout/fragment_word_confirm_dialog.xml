<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/word_confirmed_dialog_width"
                android:layout_height="@dimen/word_confirmed_dialog_height"
                android:background="@drawable/dialog_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/confirm_dialog_layout"
                tools:context="it.gbresciani.legodigitalsonoro.fragments.WordConfirmDialogFragment">

    <TextView
        android:id="@+id/word_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dialog_word_padding"
        android:textAllCaps="true"
        android:text="word"
        android:textSize="@dimen/dialog_text_size"
        android:textStyle="bold"
        android:visibility="visible"/>


    <ImageButton
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_button_ok_bg_sel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_button_no_bg_sel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
