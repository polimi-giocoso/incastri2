<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/word_confirmed_dialog_width"
                android:layout_height="@dimen/word_confirmed_dialog_height"
                android:background="@drawable/dialog_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/confirm_dialog_layout"
                tools:context="it.gbresciani.legodigitalsonoro.fragments.WordConfirmDialogFragment">

    <ImageView
        android:id="@+id/speak_icon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="@dimen/dialog_word_padding"
        android:layout_marginBottom="50dp"
        android:src="@drawable/speak_icon_anim_bg"
        android:visibility="visible"
        android:layout_above="@+id/no_button"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_button_ok_bg_sel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_button_no_bg_sel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
