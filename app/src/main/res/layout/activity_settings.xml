<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_settings_horizontal_margin"
                android:paddingRight="@dimen/activity_settings_horizontal_margin"
                android:paddingTop="@dimen/activity_settings_vertical_margin"
                android:paddingBottom="@dimen/activity_settings_vertical_margin"
                tools:context="it.gbresciani.poligame.activities.SettingsActivity">

    <TextView
        android:text="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="75dp"
        android:id="@+id/setting_title"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/settings_content"
        android:layout_below="@+id/setting_title"
        android:layout_alignParentStart="true">
    </FrameLayout>


</RelativeLayout>
