                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_settings_horizontal_margin"
                android:paddingRight="@dimen/activity_settings_horizontal_margin"
                android:background="@drawable/play_bg"
                tools:context="it.gbresciani.poligame.activities.SettingsActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/setting_list_top_padding"
